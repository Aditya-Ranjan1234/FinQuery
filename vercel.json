{
  "version": 2,
  "builds": [
    {
      "src": "hackrx_llm/api/serverless.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "includeFiles": [
          "hackrx_llm/**/*.py",
          "hackrx_llm/templates/**",
          "hackrx_llm/static/**"
        ]
      }
    },
    {
      "src": "hackrx_llm/static/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/hackrx_llm/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "hackrx_llm/api/serverless.py"
    }
  ],
  "functions": {
    "hackrx_llm/api/serverless.py": {
      "memory": 3008,
      "maxDuration": 60
    }
  }
}
