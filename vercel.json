{
  "version": 2,
  "builds": [
    {
      "src": "hackrx_llm/api/serverless.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    },
    {
      "src": "hackrx_llm/static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    // Serve static files
    {
      "src": "/static/(.*)",
      "dest": "/hackrx_llm/static/$1"
    },
    // API routes
    {
      "src": "/api/(.*)",
      "dest": "/hackrx_llm/api/serverless.py"
    },
    // Frontend routes (SPA support)
    {
      "src": "/(.*)",
      "dest": "/hackrx_llm/api/serverless.py"
    }
  ],
  "buildCommand": "pip install -r requirements-vercel.txt && python -m pip install --upgrade pip && npm install",
  "outputDirectory": "public",
  "regions": ["iad1"],
  "env": {
    "PYTHONPATH": "/var/task",
    "VERCEL": "1",
    "FLASK_ENV": "production",
    "FLASK_APP": "hackrx_llm.webapp:create_app()"
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "hackrx_llm/api/serverless.py"
    },
    {
      "source": "/(.*)",
      "destination": "hackrx_llm/api/serverless.py"
    }
  ]
}
