{
  "version": 2,
  "builds": [
    {
      "src": "hackrx_llm/webapp.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "python3.10"
      }
    },
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "hackrx_llm/static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/webhook",
      "dest": "/api/index.js",
      "methods": ["GET", "POST", "OPTIONS"]
    },
    {
      "src": "/static/(.*)",
      "dest": "/hackrx_llm/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/hackrx_llm/webapp.py"
    }
  ]
}
