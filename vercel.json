{
  "version": 2,
  "builds": [
    {
      "src": "hackrx_llm/webapp.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "python3.10"
      }
    },
    {
      "src": "hackrx_llm/static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/hackrx_llm/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "hackrx_llm/api/serverless.py"
    }
  ],
  "functions": {
    "hackrx_llm/api/serverless.py": {
      "memory": 3008,
      "maxDuration": 60
    }
  }
}
