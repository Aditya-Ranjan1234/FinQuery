{
  "version": 2,
  "builds": [
    {
      "src": "hackrx_llm/api/serverless.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    },
    {
      "src": "hackrx_llm/static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/hackrx_llm/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "hackrx_llm/api/serverless.py"
    }
  ],
  "buildCommand": "npm run build",
  "outputDirectory": "public",
  "regions": ["iad1"],
  "env": {
    "PYTHONPATH": "/var/task"
  }
}
